<div class="max-w-6xl mx-auto px-4 py-8">
  <%= render "admin/shared/nav" %>
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white"><%= t("admin.invitations.index.heading") %></h1>
    <%= link_to t("admin.invitations.index.create_invitation"), new_admin_invitation_path, class: "py-2 px-4 bg-primary hover:bg-primary-hover text-white font-semibold rounded-lg transition-colors" %>
  </div>

  <% if flash[:notice] %>
    <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-3 mb-4 text-sm text-green-700 dark:text-green-300">
      <p><%= flash[:notice] %></p>
      <% if flash[:invitation_url] %>
        <div class="mt-2" data-controller="clipboard" data-clipboard-copied-text-value="<%= t('js.copied') %>">
          <div class="flex">
            <input type="text" readonly value="<%= flash[:invitation_url] %>"
                   data-clipboard-target="source"
                   class="flex-1 px-3 py-2 rounded-l-lg border border-green-300 dark:border-green-700 dark:bg-gray-800 dark:text-white bg-white text-sm font-mono">
            <button type="button" data-action="click->clipboard#copy"
                    class="px-4 py-2 bg-primary hover:bg-primary-hover text-white font-semibold rounded-r-lg transition-colors text-sm">
              <%= t("shared.actions.copy") %>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="bg-white dark:bg-dark-surface rounded-2xl shadow overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-50 dark:bg-gray-800">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider"><%= t("admin.invitations.index.code") %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider"><%= t("admin.invitations.index.used_by") %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider"><%= t("admin.invitations.index.status") %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider"><%= t("admin.invitations.index.expires") %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider"><%= t("admin.invitations.index.actions") %></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
        <% @invitations.each do |invitation| %>
          <tr>
            <td class="px-6 py-4 text-sm text-gray-900 dark:text-white font-mono"><%= invitation.code.truncate(16) %></td>
            <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400"><%= invitation.used_by&.email_address %></td>
            <td class="px-6 py-4 text-sm">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium
                <%= case invitation.status
                    when 'pending' then 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300'
                    when 'used' then 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300'
                    when 'expired' then 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300'
                    end %>">
                <%= t("shared.status.#{invitation.status}") %>
              </span>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400"><%= invitation.expires_at.strftime("%Y-%m-%d %H:%M") %></td>
            <td class="px-6 py-4 text-sm">
              <% if invitation.pending? %>
                <%= button_to t("admin.invitations.index.revoke"), admin_invitation_path(invitation), method: :delete, class: "text-red-600 hover:text-red-800 dark:text-red-400",
                    data: { turbo_confirm: t("shared.confirm.revoke_invitation") } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

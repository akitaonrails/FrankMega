<nav class="mb-6 flex items-center gap-1 border-b border-gray-200 dark:border-gray-700">
  <%
    tabs = [
      ["Users", admin_users_path],
      ["Invitations", admin_invitations_path],
      ["Files", admin_shared_files_path],
      ["MIME Types", admin_allowed_mime_types_path]
    ]
  %>
  <% tabs.each do |label, path| %>
    <% active = request.path.start_with?(path) %>
    <%= link_to label, path, class: "px-4 py-3 text-sm font-medium border-b-2 -mb-px transition-colors #{active ? 'border-primary text-primary' : 'border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200 hover:border-gray-300'}" %>
  <% end %>
</nav>

<div class="min-h-screen flex items-center justify-center">
  <div class="w-full max-w-md">
    <div class="bg-white dark:bg-dark-surface rounded-2xl shadow-xl p-8">
      <h1 class="text-3xl font-bold text-center text-primary mb-2">Reset Password</h1>
      <p class="text-center text-gray-600 dark:text-gray-400 mb-8">Enter your email to receive reset instructions</p>

      <% if flash[:alert] %>
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-3 mb-4 text-sm text-red-700 dark:text-red-300">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= form_with url: passwords_path, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :email_address, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= f.email_field :email_address, required: true, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent" %>
        </div>

        <%= f.submit "Send Reset Link", class: "w-full py-3 px-4 bg-primary hover:bg-primary-hover text-white font-semibold rounded-lg transition-colors cursor-pointer" %>
      <% end %>

      <p class="mt-6 text-center text-sm text-gray-600 dark:text-gray-400">
        <%= link_to "Back to sign in", new_session_path, class: "text-primary hover:underline" %>
      </p>
    </div>
  </div>
</div>

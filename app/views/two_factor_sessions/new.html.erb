<div class="min-h-screen flex items-center justify-center">
  <div class="w-full max-w-md">
    <div class="bg-white dark:bg-dark-surface rounded-2xl shadow-xl p-8">
      <h1 class="text-3xl font-bold text-center text-primary mb-2">Two-Factor Authentication</h1>
      <p class="text-center text-gray-600 dark:text-gray-400 mb-8">Enter the code from your authenticator app</p>

      <% if flash[:alert] %>
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-3 mb-4 text-sm text-red-700 dark:text-red-300">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= form_with url: two_factor_session_path, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :otp_code, "Authentication Code", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= f.text_field :otp_code, required: true, autofocus: true, autocomplete: "one-time-code", inputmode: "numeric", pattern: "[0-9]{6}", maxlength: 6,
              class: "w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent text-center text-2xl tracking-widest" %>
        </div>

        <%= f.submit "Verify", class: "w-full py-3 px-4 bg-primary hover:bg-primary-hover text-white font-semibold rounded-lg transition-colors cursor-pointer" %>
      <% end %>
    </div>
  </div>
</div>

<nav class="fixed top-0 left-0 right-0 z-40 bg-white dark:bg-dark-surface border-b border-gray-200 dark:border-gray-700 shadow-sm">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <%# Logo %>
      <div class="flex items-center gap-6">
        <%= link_to root_path, class: "flex items-center gap-2" do %>
          <span class="text-2xl font-bold text-primary">Frank</span><span class="text-2xl font-bold text-gray-900 dark:text-white">Mega</span>
        <% end %>

        <div class="flex items-center gap-4">
          <% if current_user&.admin? %>
            <%= link_to "Admin", admin_root_path, class: "text-sm font-medium text-gray-600 dark:text-gray-300 hover:text-primary transition-colors" %>
          <% end %>
        </div>
      </div>

      <%# Right side %>
      <div class="flex items-center gap-3">
        <%# Dark mode toggle %>
        <button type="button" data-action="click->theme#toggle" class="p-2 rounded-lg text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
          <%# Sun icon (shown in dark mode) %>
          <svg data-theme-target="lightIcon" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden dark:block" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
          </svg>
          <%# Moon icon (shown in light mode) %>
          <svg data-theme-target="darkIcon" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 block dark:hidden" viewBox="0 0 20 20" fill="currentColor">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
          </svg>
        </button>

        <%# User menu %>
        <div class="relative" data-controller="dropdown">
          <button type="button" data-action="click->dropdown#toggle" class="flex items-center gap-1 text-sm text-gray-600 dark:text-gray-300 hover:text-primary transition-colors cursor-pointer">
            <%= current_user&.email_address %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
            </svg>
          </button>
          <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-white dark:bg-dark-surface rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 py-1 z-50">
            <%= link_to "Profile", profile_path, class: "block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800" %>
            <%= button_to "Log out", session_path, method: :delete, form: { class: "w-full" }, class: "w-full text-left px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 cursor-pointer" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>

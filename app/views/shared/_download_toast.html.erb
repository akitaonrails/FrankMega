<div class="bg-white dark:bg-dark-surface rounded-lg shadow-lg p-4 border border-gray-200 dark:border-gray-700 max-w-sm"
     data-controller="notification"
     data-notification-duration-value="5000">
  <div class="flex items-start gap-3">
    <div class="flex-shrink-0">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </div>
    <div class="flex-1 min-w-0">
      <p class="text-sm font-medium text-gray-900 dark:text-white"><%= t("shared.download_toast.file_downloaded") %></p>
      <p class="text-xs text-gray-500 dark:text-gray-400 truncate">
        <%= shared_file.original_filename %>
        (<%= shared_file.download_count %>/<%= shared_file.max_downloads %>)
      </p>
    </div>
  </div>
</div>
